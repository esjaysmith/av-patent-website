# ===========================================
# AV Navigation IP Protection - Environment Configuration
# ===========================================
# Copy this file to .env and update with your environment-specific values
# The .env file is gitignored and should never be committed

# -------------------------------------------
# ENVIRONMENT
# -------------------------------------------
# Options: development, staging, production
ENVIRONMENT=development

# -------------------------------------------
# DOMAIN CONFIGURATION
# -------------------------------------------
# SITE_URL: Full base URL for your site (used in Open Graph tags, sitemaps, robots.txt)
# Examples:
#   - Development: http://localhost:8000
#   - Staging:     https://staging.av-navigation-ip.com
#   - Production:  https://av-navigation-ip.com
SITE_DOMAIN=localhost
SITE_URL=http://localhost:8000

# -------------------------------------------
# SEO & INDEXING
# -------------------------------------------
# ROBOTS_INDEX: Control search engine indexing
#   - false (development/staging): Blocks search engines with "Disallow: /"
#   - true (production):           Allows search engines with "Allow: /"
ROBOTS_INDEX=false

# -------------------------------------------
# ANALYTICS
# -------------------------------------------
# Replace G-XXXXXXXXXX with your actual Google Analytics 4 Measurement ID
# Only used when deployed to production
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_ENABLED=false

# -------------------------------------------
# CONTACT
# -------------------------------------------
# Email address for contact forms and schema.org metadata
CONTACT_EMAIL=contact@example.com

# ===========================================
# PRODUCTION EXAMPLE
# ===========================================
# For production deployment, use:
# ENVIRONMENT=production
# SITE_URL=https://av-navigation-ip.com
# ROBOTS_INDEX=true
# GOOGLE_ANALYTICS_ID=G-YOUR-ACTUAL-ID
# GOOGLE_ANALYTICS_ENABLED=true
# CONTACT_EMAIL=licensing@av-navigation-ip.com
